<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="WinUIDemoApp.Shell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:da="using:System.ComponentModel.DataAnnotations"
    xmlns:local="using:WinUIDemoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid ColumnDefinitions="*,*">
        <StackPanel Grid.Column="0">
            <TextBox Description="{x:Bind local:Helpers.GetErrorMessage('Name', ViewModel.ValidationResults), Mode=OneWay}" Text="{x:Bind ViewModel.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox Description="{x:Bind local:Helpers.GetErrorMessage('Age', ViewModel.ValidationResults), Mode=OneWay}" Text="{x:Bind ViewModel.Age, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <ListView Grid.Column="1" ItemsSource="{x:Bind ViewModel.ValidationResults, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="da:ValidationResult">
                    <TextBlock Text="{x:Bind ErrorMessage, Mode=OneWay}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>


</Page>
